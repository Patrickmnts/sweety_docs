<!DOCTYPE html>
<html>
  <head>
    <title>SweetyCc</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-7">
          <h1>Sweety - A blood glucose companion.</h1>
        </div>
        <div class="col-md-4">
          <%= link_to "Home", root_path, class: 'btn btn-info', id: 'home-link'%>
        </div>
      </div>

      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
