<div class="row">
  <h2>Run a report for <%= @user.full_name %></h2>

  <div class="col-md-6">
    <p class='well'>
      <span><strong>Daily:</strong> Data for only selected day.</span><br/>
      <span><strong>Month-to-date:</strong> Data from beginning of month ending on selected day.</span><br/>
      <span><strong>Monthly:</strong> Data from one month (30 days) prior to selected day.</span><br/>
    </p>

  </div>
  <div class="col-md-6">

    <%= form_for @report, url: user_reports_path(@user) do |f| %>

      <%= f.hidden_field :user_id, value: @user.id %>

      <%= f.label :report_type, 'Report Type:' %>
      <%= f.select :report_type, [['Daily', 'daily'], ['Month to Date', 'month-to-date'], ['Monthly', 'monthly']] %><br/>

      <%= f.label :start_date, 'Date:' %>
      <%= f.date_field :end_date, value: Date.today, max: Date.today %><br/>

      <!-- <br/> -->
      <%= f.submit "Run Report", class: 'btn btn-lg' %>
    <% end %>
  </div>
</div>
